{
  "name": "hackathon-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "server": "tsx server/index.ts",
    "server:prod": "node server/index.js",
    "build:server": "tsc server/index.ts --outDir dist --module commonjs --target es2020 --moduleResolution node --esModuleInterop",
    "blockchain": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "db:setup": "psql -U postgres -d hackathon_platform -f lib/db/schema.sql",
    "db:seed": "psql -U postgres -d hackathon_platform -f lib/db/seed.sql",
    "start-all": "concurrently --kill-others --names \"BLOCKCHAIN,BACKEND,FRONTEND\" -c \"blue,green,magenta\" \"node start-blockchain.js\" \"npm run server\" \"npm run dev\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^5.8.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "hardhat": "^2.27.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "type": "module"
}
